<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Bloginy : {% trans from "app" %}Blog Aggregator{% endtrans %}{% endblock %}</title>

        {% block js %}
            <script src="{{ asset('js/jquery/jquery-1.4.4.min.js') }}"></script>
            <script src="{{ asset('js/jquery/jquery.tools.min.js') }}"></script>
            <script src="{{ asset('js/bundles/bloginy/utils/BloginyMessage.js') }}"></script>
            <script src="{{ asset('fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
            <script src="{{ asset('js/bundles/bloginy/user/ShareLinkView.js') }}"></script>
            <script src="{{ asset('bundles/rizewayform/js/jquery-ui-1.8.15.custom.min.js') }}"></script>
            <script src="{{ asset('bundles/rizewayform/js/RizewayAutocompleter.js') }}"></script>
            <script src="{{ asset('js/bundles/bloginy/utils/SearchFormView.js') }}"></script>
            <script src="http://platform.twitter.com/widgets.js"></script>
            <script src="{{ asset('js/tiny_mce/jquery.tinymce.js') }}"></script>
        {% endblock %}

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

        <link rel="stylesheet" type="text/css" media="all" href="{{ asset('css/design.css') }}"/>
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('fancybox/jquery.fancybox-1.3.4.css') }}" />
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/rizewayform/css/RizewayAutocompleter.css') }}" />
        
        <!--[if IE]>
            <script src="{{ asset("js/fix/html5shiv.js") }}"></script>
        <![endif]-->
        <!--[if lt IE 9]>
            <script src="{{ asset("js/fix/IE9.js") }}"></script>
        <![endif]-->

        {% block meta %}
        {% endblock %}
    </head>
    <body {% render "BloginyBundle:Utils:languageClass" %}>
        <div id="bloginy-message">Your settings has been saved successfully.</div>
        
        <div id="black_header" >
            <div id ="header" class="divcenter">
		<a id="logo" href="http://bloginy.com"> <img src="{{ asset('images/logo.png') }}" alt="Logo du site" /></a>
                {% render "BloginyBundle:Utils:loginStatus" %}
                {% block searchform %}
                {% include "BloginyBundle:Post:search_form.html.twig" %}
                {% endblock %}
                {% block mainmenu %}
                    {% render "BloginyBundle:Utils:mainMenu" %}
                {% endblock %}
            </div>
        </div>

        <div class="divcenter">
            {% block submenu %}{% endblock %}

            <div id="content">
                <table id="content-table">
                    <tr>
                        <td>{% block sidebarleft %}{% endblock %}</td>
                        <td id="content-center">
                            {% block body %}toto{% endblock %}
                        </td>
                        <td>
                            {% block sidebarright %}
                                <div id="sidebar-right" class="sidebar">
                                    {% include "BloginyBundle:Utils:subscribe_block.html.twig" %}
                                    {% include "BloginyBundle:User:share_button.html.twig" %}
                                    {% include "BloginyBundle:Blog:propose_button.html.twig" %}
                                    {% render "BloginyBundle:Blog:dailyBlog" %}
                                </div>
                            {% endblock %}
                        </td>
                    </tr>
                </table>
            </div>
            
            <div id="social-networks">
                {% trans from 'bloginy' %}Follow us{% endtrans %}
                <a id="bloginy-facebook" href="http://facebook.com/blogagregator">Bloginy sur Facebook</a>
                <a id="bloginy-twitter" href="http://twitter.com/bloginy">Bloginy sur Twitter</a>
                <a id="bloginy-rss" href="http://blog.bloginy.com/feed">Flux du Blog</a>
            </div>

           {% include "BloginyBundle:Utils:footer.html.twig" %}
           <div id="copyright">
               <a href="http://rizeway.com"><img src="{{ asset('images/rizeway.png')}}" /></a>
               Bloginy Â© 2008 - 2011 All rights reserved
           </div>

           {% render "BloginyBundle:Utils:switchLanguage" %}
           
	</div>
        
        {% block admin %}{% endblock %}
        
        <!-- Google Tracking Code - Asynchrone-->

        <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-788479-5']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(ga);
          })();

        </script>

        <!-- End of Google Tracking Code - Asynchrone-->

    </body>
</html>
