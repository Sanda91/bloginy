<h4 class="sidebar-title spacer-top">{% trans from "bloginy" %}Language Filter{% endtrans %}</h4>
<ul id="languages" class="menu-vertical">
    <li {% if language == 'all' %}class="current"{% endif %}><a href="{{ path('blogs_list', {'language': 'all', 'location': location}) }}">{% trans from "bloginy" %}All languages{% endtrans %}</a></li>
    {% for lang in languages|keys %}
        <li {% if language == lang %}class="current"{% endif %}>
            <a href="{{ path('blogs_list', {'language': lang, 'location': location}) }}" title="{{ languages[lang] }}">{{ languages[lang]|trans({},"bloginy") }}</a>
        </li>
    {% endfor %}
</ul>