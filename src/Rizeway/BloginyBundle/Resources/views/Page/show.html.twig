{% extends "::layout.html.twig" %}

{% block title %}{{ page.name }}, Bloginy{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('js/bundles/bloginy/utils/BloginyTabs.js') }}"></script>
    <script src="{{ asset('js/bundles/bloginy/utils/bloginyPager.js') }}"></script>
    <script src="{{ asset('js/bundles/bloginy/post/PostHandler.js') }}"></script>
    <script src="{{ asset('js/bundles/bloginy/utils/VerticalMenu.js') }}"></script>
    <script src="{{ asset('js/bundles/bloginy/page/NewPageView.js') }}"></script>
{% endblock %}

{% block mainmenu %}
    {% render "BloginyBundle:Utils:mainMenu" %}
{% endblock %}

{% block submenu %}
     <div id="submenu"><em>{% trans from 'bloginy' %}Page created at{% endtrans %} {{ page.createdAt|date('Y-m-d H:i:s') }} {% trans from 'bloginy' %}by{% endtrans %} {{ page.user.username }}</em></div>
{% endblock %}

{% block body %}
    <div id="page_content">
        {% include "BloginyBundle:Page:show_ajax.html.twig" with {'page': page} %}
    </div>
{% endblock %}

{% block sidebarright %}
    <div id="sidebar-right" class="sidebar">
        {% include "BloginyBundle:User:identity.html.twig" with {'user': page.user} %}
    </div>
{% endblock %}