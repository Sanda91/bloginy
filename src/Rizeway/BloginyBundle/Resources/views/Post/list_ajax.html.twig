{% for post in posts|keys %}
    {% include "BloginyBundle:Post:resume.html.twig" with {'post' : posts[post], 'vote' : votes[posts[post].id]|default(false), 'class' : cycle(['odd', 'even'], post) } %}
{% endfor %}

{% if show_pager %}
    {% include "BloginyBundle:Post:pager.html.twig" with {'route' : 'posts_list', 'params' : {'page': page, 'category_name': category_name, 'sort': sort, 'language' : language}} %}
{% endif %}