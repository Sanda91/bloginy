{% extends "::layout.html.twig" %}

{% block title %}Bloginy : {% trans from "bloginy" %}Comments{% endtrans %}{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('js/bundles/bloginy/utils/bloginyPager.js') }}"></script>
    <script src="{{ asset('js/bundles/bloginy/utils/VerticalMenu.js') }}"></script>
    <script src="{{ asset('js/bundles/bloginy/comment/CommentHandler.js') }}"></script>
{% endblock %}

{% block mainmenu %}
    {% render "BloginyBundle:Utils:mainMenu" %}
{% endblock %}

{% block submenu %}
     <div id="submenu">
        {% include "BloginyBundle:User:submenu.html.twig" with {'current': 'comments'} %}
     </div>
{% endblock %}

{% block body %}
    <div id="user_comments_content">
        {% render "BloginyBundle:User:comments" %}
    </div>
{% endblock %}

{% block sidebarleft %}
    <div id="sidebar-left" class="sidebar">
        {% include "BloginyBundle:User:comment_menu.html.twig" %}
    </div>
{% endblock %}

{% block sidebarright %}
    <div id="sidebar-right" class="sidebar">
        {% include "BloginyBundle:User:identity.html.twig" with {'user': user} %}
    </div>
{% endblock %}