<div class="activity {{ class }}">
    <span class="datetime">{{ activity.createdAt|date('Y-m-d H:i:s') }}</span>
    {% trans from "bloginy" %}A new blog has been added{% endtrans %} : 
    <a {% if is_arabic(activity.blog.title) %}dir="rtl"{% else %}dir="ltr"{% endif %} href="{{ path('blog_show', {'slug': activity.blog.slug }) }}">{{ activity.blog.shortTitle }}</a>
</div>