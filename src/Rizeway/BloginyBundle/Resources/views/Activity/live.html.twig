{% extends "::layout.html.twig" %}

{% block title %}Bloginy : {% trans from "bloginy" %}Live activities{% endtrans %}{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('js/bundles/bloginy/utils/bloginyPager.js') }}"></script>
    <script src="{{ asset('js/bundles/bloginy/utils/LiveView.js') }}"></script>
    <script src="{{ asset('js/bundles/bloginy/utils/RefreshDomHandler.js') }}"></script>
{% endblock %}

{% block mainmenu %}
    {% render "BloginyBundle:Utils:mainMenu" with {"current": "live"} %}
{% endblock %}

{% block body %}

    <div id="activities-list">
        {% include "BloginyBundle:Activity:live_ajax.html.twig" with {'activities': activities, 'show_pager': show_pager, 'from': from, 'refresh': true, 'refreshed': false} %}
    </div>

{% endblock %}

{% block submenu %}
    <div id="submenu">
        {% include "BloginyBundle:Utils:live_menu.html.twig" with {'current': 'activities'} %}
    </div>
{% endblock %}

{% block sidebarright %}
    <div id="sidebar-right" class="sidebar">
        {% include "BloginyBundle:User:share_button.html.twig" %}
        {% include "BloginyBundle:Blog:propose_button.html.twig" %}
        {% render "BloginyBundle:Post:last" %}
    </div>
{% endblock %}
